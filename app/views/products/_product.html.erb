<div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
    <div class="my-list">
        <%= image_tag(product.image.url, alt: "Image") if product.image? %>
        <h3><%= product.name %></h3>
        <span><%= number_to_currency product.price%></span>
        <div class="detail">
            <%= image_tag(product.image.url, alt: "Image") if product.image? %>
            <%= form_for @order_item do |f| %>
                <h4 class="text-right">Unit Price: <span style="color: green"><%= number_to_currency product.price %></span></h4>
                <div class="input-group">
                <%= f.number_field :quantity, value: 1, class: "form-control", min: 1 %>
                <div class="input-group-btn">
                    <%= f.hidden_field :product_id, value: product.id %>
                    <%= f.submit "Add to Cart", class: "btn btn-primary" %>
                </div>
                </div>
            <% end %>
            <%# <a href="#" class="btn btn-info">Deatil</a> %>
        </div>
    </div>
</div>